<div class="row">
        <div class="col-md-4">
                {{#link-to 'todos.new' class='btn btn-success'}} Create Todo {{/link-to}}
                <hr> {{outlet}}
        </div>
        <div class="col-md-8">
                <div class="row">
                        <div class="col-md-12">
                                <form action="" class="form-inline">
                                        <div class="form-group">
                                                {{input type='text' class='form-control' value=filter id='search' placeholder='Search Tools'}}
                                        </div>
                                        <button type='submit' class='btn btn-default'>
                                                Search
                                        </button>
                                </form>
                        </div>
                </div>
                <hr>
                <br>
                {{#if filter}}
                        {{#each filteredTodos as |todo|}}
                                <div class='card card-body bg-light'>
                                        <h4 class="text-muted">
                                                {{#link-to 'todos.edit' todo.id}}
                                                        {{todo.title}}
                                                {{/link-to}}
                                                <span class="badge badge-secondary float-right">
                                                        {{format-date todo.date}}
                                                </span>
                                        </h4>
                                        <p class="text-muted">
                                                {{format-md todo.body}}
                                        </p>
                                </div>
                                <br>
                        {{/each}}
                {{else}}
                        {{#each sortedTodos as |todo|}}
                                <div class='card card-body bg-light'>
                                        <h4 class="text-muted">
                                                {{#link-to 'todos.edit' todo.id}}
                                                        {{todo.title}}
                                                {{/link-to}}
                                                <span class="badge badge-secondary float-right">
                                                        {{format-date todo.date}}
                                                </span>
                                        </h4>
                                        <p class="text-muted">
                                                {{format-md todo.body}}
                                        </p>
                                </div>
                                <br>
                        {{/each}}
                {{/if}}
        </div>
</div>