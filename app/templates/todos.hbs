<div class="row">
        <div class="col-md-4">
                {{#link-to 'todos.new' class='btn btn-success'}} Create Todo {{/link-to}}
                <hr>
                {{outlet}}
        </div>
        <div class="col-md-8">
                <div class="row">
                        <div class="col-md-12">
                                <form action="" class="form-inline">
                                        <div class="form-group">
                                                {{input type='text' class='form-control' value=filter id='search' placeholder='Search Tools'}}
                                        </div>
                                        <button type='submit' class='btn btn-default'>
                                                Search
                                        </button>
                                </form>
                        </div>
                </div>
                <hr><br>
                {{#each sortedTodos as |todo|}}
                        <div class='card card-block bg-faded'>
                                <h4>
                                        {{todo.title}}
                                        <span class="label label-primary pull-right">
                                                {{format-date todo.date}}
                                        </span>
                                </h4>
                                {{todo.body}}
                        </div>
                {{/each}}
        </div>
</div>