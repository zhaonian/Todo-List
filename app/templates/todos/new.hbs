<form id="new-todo-form" action="">
        <div class="form-group">
                <label for="">Title</label>
                {{input type="text" class="form-control" value=title placeholder="Add Todo..."}}
        </div>
        <div class="form-group">
                <label for="">Due Date</label>
                {{input type="date" class="form-control" value=date}}
        </div>
        <div class="form-group">
                <label for="">Body</label>
                {{textarea class="form-control" value=body placeholder="What to do..."}}
        </div>
        <button {{action 'addTodo'}} class="btn btn-primary">
                Submit
        </button>
        {{#link-to 'todos' class='btn btn-default'}}Close{{/link-to}}
</form>